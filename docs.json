{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "UptimeGuard",
  "colors": {
    "primary": "#4F46E5",
    "light": "#818CF8",
    "dark": "#3730A3"
  },
  "favicon": "/favicon.svg",
  "navigation": {
    "tabs": [
      {
        "tab": "Guides",
        "groups": [
          {
            "group": "Get Started",
            "pages": [
              "index",
              "quickstart",
              "development"
            ]
          },
          {
            "group": "Essentials",
            "pages": [
              "essentials/markdown",
              "essentials/code",
              "essentials/images",
              "essentials/settings",
              "essentials/navigation",
              "essentials/reusable-snippets"
            ]
          }
        ]
      },
      {
        "tab": "API Reference",
        "groups": [
          {
            "group": "API Documentation",
            "pages": [
              "api-reference/introduction"
            ]
          },
          {
            "group": "Endpoint Examples",
            "pages": [
              "api-reference/endpoint/get",
              "api-reference/endpoint/create",
              "api-reference/endpoint/delete",
              "api-reference/endpoint/webhook"
            ]
          }
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "Documentation",
          "href": "https://docs.uptimeguard.xyz",
          "icon": "book-open-cover"
        },
        {
          "anchor": "Website",
          "href": "https://www.uptimeguard.xyz",
          "icon": "globe"
        },
        {
          "anchor": "Status",
          "href": "https://status.uptimeguard.xyz",
          "icon": "signal"
        }
      ]
    }
  },
  "logo": {
    "light": "/logo/light.svg",
    "dark": "/logo/dark.svg"
  },
  "navbar": {
    "links": [
      {
        "label": "Support",
        "href": "mailto:support@uptimeguard.xyz"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Dashboard",
      "href": "https://app.uptimeguard.xyz"
    }
  },
  "footer": {
    "socials": {
      "x": "https://x.com/uptimeguard",
      "github": "https://github.com/uptimeguard",
      "linkedin": "https://linkedin.com/company/uptimeguard"
    }
  }
}